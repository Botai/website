extends ../layout
//- 详情页
block content
  .container
    .row
      //- 左边宽度 7
      .col-md-7
        //- 嵌入播放器
        embed(src="#{movie.flash}", allowFullScreen="true", quality="high", width="720", height="600", align="middle", type="application/x-shockwave-flash")
        .panel.panel-default
          .panel-heading
            h3 评论区	  
          .panel-body
            ul.media-list
              each item in comments
                li.media
                  .pull-left
                    img.media-object(src="http://123.207.154.174/wp-content/uploads/2017/05/cropped-cf6a03843171e56c4b8f06e4c8cde872.png", style="width: 64px; height: 64px;")
                  .media-body
                    h4.media-heading #{item.from.name}
                    p #{item.content}
                    a.comment(href="#comments", data-cid="#{item._id}", data-tid="#{item.from._id}") 点击回复
                    if item.reply && item.reply.length > 0
                      each reply in item.reply
                        .media
                          .pull-left
                            img.media-object(src="http://123.207.154.174/wp-content/uploads/2017/05/cropped-cf6a03843171e56c4b8f06e4c8cde872.png", style="width: 64px; height: 64px;")
                          .media-body
                            h4.media-heading 
                              | #{reply.from.name}
                              span.text-info &nbsp;回复&nbsp;
                              | #{reply.to.name}
                            p #{reply.content}
                            a.comment(href="#comments", data-cid="#{item._id}", data-tid="#{reply.from._id}") 点击回复
        #comments
          form#commentFrom(method="post", action="/user/comment")
            input(type="hidden", name="comment[movie]", value="#{movie._id}")
            if user    
              input(type="hidden", name="comment[from]", value="#{user._id}")
            .form-group
              textarea.form-control(name="comment[content]", row="3")
            if user    
              button.btn.btn-primary(type="submit") 提交
            else
              a.navbar-link(href="#", data-toggle="modal", data-target="#signinModal") 登录后评论
      //- 右边宽度 5
      .col-md-5
        dl.dl-horizontal
          dt 电影名字
          dd #{movie.title}
          dt 导演
          dd #{movie.doctor}
          dt 国家
          dd #{movie.country}
          dt 语言
          dd #{movie.language}
          dt 上映年份
          dd #{movie.year}
          dt 海报地址
          dd #{movie.poster}
          dt 片源地址
          dd #{movie.flash}
          dt 简介
          dd #{movie.summary}

  script(src="/js/detail.js")
