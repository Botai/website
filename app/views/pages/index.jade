extends ../layout
//- 首页
block content
  .container
    .row
      .panel.panel-default#new_movies 
        .panel-heading
          button.btn.btn-primary#new_movies_local 获取最近热映电影
          button.btn.btn-primary#coming_soon 获取即将上映电影
        .panel-body.new_movies_title 
            
    each cat in categories
      .panel.panel-default
        .panel-heading
          h3
            a(href='/results?category_id=#{cat._id}&page=0') #{cat.name}
        .panel-body
          if cat.movies && cat.movies.length > 0
            each item in cat.movies
              .col-sm-2
                .thumbnail
                  a(href="/movie/#{item._id}")
                    img(src="#{item.poster}", alt="#{item.title}")
                  .caption
                    h3 #{item.title}
                    p: a(href="/movie/#{item._id}", role="button") 观看预告片

  script(src="/js/api.js")
  script(src="/js/header.js")
