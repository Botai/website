extends ../layout
//- 详情页
block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 名字
						th 录入时间
						th 管理员权限
						th 更新
						th 删除
				tbody
					each item in users
						tr(class="item-id-#{item._id}")
							td #{item.name}
							td #{moment(item.meta.updateAt).format('YYYY/MM/DD')}
							if(item.role >= 10)
								td 管理员
							else
								td 普通人员 
							td: a(target="_black", href="/admin/user/update/#{item._id}") 修改
							td
								button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
